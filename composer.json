{
    "name": "hardimpactdev/oracle",
    "description": "Project-aware AI research & review CLI",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "guzzlehttp/guzzle": "^7.10",
        "laravel-zero/framework": "^12.0.2"
    },
    "require-dev": {
        "humbug/box": "^4.6",
        "laravel/pint": "^1.25.1",
        "mockery/mockery": "^1.6.12",
        "pestphp/pest": "^4.1.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "vendor/bin/pint",
        "test": "vendor/bin/pest"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "bin": ["oracle"]
}
